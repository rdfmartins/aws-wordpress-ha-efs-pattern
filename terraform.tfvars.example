# IMPORTANTE: Nunca commite este arquivo no Git!
# Copie de terraform.tfvars.example e preencha com seus valores reais.

# IDs da sua infraestrutura AWS (obtenha com: aws ec2 describe-vpcs / describe-subnets)
vpc_id         = "vpc-xxxxxxxxxxxxxxxxx"
public_subnets = ["subnet-xxxxxxxxxxxxxxxxx", "subnet-yyyyyyyyyyyyyyyyy"]

# Configuração das instâncias
instance_type        = "t3.micro"
asg_min_size         = 1
asg_max_size         = 2
asg_desired_capacity = 1

# Senha do banco MySQL (MUDE ESTA SENHA!)
# Em produção, use AWS Secrets Manager
db_password = "SuaSenhaSeguraAqui123!"

# Ambiente
environment = "dev"
